@model List<EasyTripMVC.Models.Classes.Blog>


<div class="con-bot">
  
    @foreach (var item in Model)
    {
        <div class="right">
            <div class="bot-left">
                <img style="width:300px;height:150px" src="@item.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToShortDateString()</span>
          <p>@item.Description.Substring(0,item.Description.Substring(0,95).LastIndexOf(" "))</p>
                <p><a href="/Blog/BlogDetails/@item.BlogID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>

    }
</div>
   