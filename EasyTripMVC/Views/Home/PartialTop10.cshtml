@model List<EasyTripMVC.Models.Classes.Blog>
@{

    int count = 0;
}


<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @foreach (var item in Model)
                {
                    count++;
            <li class="list-bg"><span>@count.</span><a href="/Blog/BlogDetails/@item.BlogID">@item.Title</a></li>
        }
        
    </ul>
    <a href="/Blog/Index" class="link1">Tüm Blogları Gör</a>
</div>
