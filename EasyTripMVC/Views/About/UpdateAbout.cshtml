@model EasyTripMVC.Models.Classes.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="container"> Hakkımda Güncelleme Sayfası</h3>

<form class="form-group" method="post">
    @Html.HiddenFor(x => x.AboutID)
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br />
   
    <button class="btn btn-outline-success">Güncelle</button>

</form>

