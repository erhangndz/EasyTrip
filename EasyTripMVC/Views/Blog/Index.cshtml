    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/Content/Blog/web/js/move-top.js"></script>
    <script type="text/javascript" src="~/Content/Blog/web/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
			jQuery(document).ready(function($) {
				$(".scroll").click(function(event){
					event.preventDefault();
					$('html,body').animate({scrollTop:$(this.hash).offset().top},900);
				});
			});
    </script>
    <!---->

</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">

            <div class="clearfix"></div>

        </div>
    </div>
    <!--/header-->
    <div class="single">
       
        <div class="clearfix"></div>
        <div class="container">
            @foreach (var item in Model.blogs)
            {
                <div class="col-md-8 single-main">
                    <div class="single-grid">
                        <img src="@item.BlogImage" alt="" />
                        <a href="/Blog/BlogDetails/@item.BlogID">@item.Title </a>
                        <p>
                            @item.Description.Substring(0,500)
                        </p>
                    </div>

                </div>
            }

            <div class="col-md-4 justify-content-r fixed-top" style="margin-top:180px">
                <div class="recent">
                    <h3>Son Gönderiler</h3>
                    <ul>
                        @foreach (var item in Model.blogs2)
                        {
                            <li><a href="/Blog/BlogDetails/@item.BlogID">@item.Title</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    <ul>
                        @foreach (var item in Model.comments)
                        {
                            <li><a href="#">@item.Name</a>-<abbr title="@item.Comments">Yorumu Gör</abbr> </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
   
   
    </body>

</html>